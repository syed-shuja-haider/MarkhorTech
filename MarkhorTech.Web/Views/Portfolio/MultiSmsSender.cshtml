@{
    ViewBag.Title = "Multi SMS Sender";
    Layout = "~/Views/Portfolio/_Layout.cshtml";
    ViewData.AddActivePage(ManageNavPages.MultiSmsSender);
}

<div class="content-side pull-right col-lg-9 col-md-8 col-sm-12 col-xs-12">
    <!--Services Single-->
    <div class="services-single">
        <div class="inner-box">
            <div class="image">
                <img src="~/images/resource/MultiSms.png" alt="">
